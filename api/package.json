{
    "name": "mrc-api",
    "version": "1.0.0",
    "description": "API services for Mr.C",
    "main": "/src/main.ts",
    "scripts": {
        "lint": "eslint . --ext .ts",
        "format": "prettier --config .prettierrc 'src/**/*.ts' 'test/**/*.ts' --write",
        "build": "rimraf ./build && tsc --project tsconfig.prod.json && tsc-alias --project tsconfig.json",
        "start": "npx ts-node -r tsconfig-paths/register src/main.ts",
        "start:dev": "npx nodemon",
        "test": "jest",
        "test:cov": "jest --coverage --coverageDirectory='coverage'"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/MovieReviewComment/Mr.C/api"
    },
    "author": "skgndi12",
    "license": "MIT",
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "^4.1.1",
        "@types/config": "^3.3.0",
        "@types/convict-format-with-validator": "^6.0.2",
        "@types/express": "^4.17.17",
        "@types/express-serve-static-core": "^4.17.35",
        "@types/jest": "^29.5.1",
        "@types/js-yaml": "^4.0.5",
        "@types/node": "^18.15.12",
        "@types/request-ip": "^0.0.37",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^5.58.0",
        "@typescript-eslint/parser": "^5.58.0",
        "eslint": "^8.38.0",
        "jest": "^29.5.0",
        "nodemon": "^2.0.22",
        "prettier": "^2.8.7",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.0",
        "ts-node": "^10.9.1"
    },
    "dependencies": {
        "config": "^3.3.9",
        "express": "^4.18.2",
        "express-async-errors": "^3.1.1",
        "js-yaml": "^4.1.0",
        "request-ip": "^3.3.0",
        "rimraf": "^5.0.0",
        "tsc-alias": "^1.8.5",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.0.4",
        "winston": "^3.8.2"
    },
    "nodemonConfig": {
        "watch": [
            "src"
        ],
        "ext": ".ts,.js",
        "ignore": [],
        "exec": "npx ts-node -r tsconfig-paths/register ./src/main.ts"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "rootDir": ".",
        "moduleNameMapper": {
            "^@src(.*)$": "<rootDir>/src/$1",
            "^@controller(.*)$": "<rootDir>/src/controller/$1"
        },
        "testRegex": "(/test/)(.*\\.(test))\\.(tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    }
}
